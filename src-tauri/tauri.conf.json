{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "etools",
  "version": "0.1.0",
  "identifier": "com.xuqi.etools",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "etools",
        "width": 640,
        "height": 80,
        "minWidth": 400,
        "minHeight": 80,
        "maxHeight": 80,
        "resizable": false,
        "transparent": true,
        "decorations": false,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "center": true,
        "visible": false,
        "hiddenTitle": true,
        "titleBarStyle": "Overlay"
      },
      {
        "label": "results",
        "title": "etools Results",
        "width": 640,
        "height": 400,
        "minWidth": 400,
        "minHeight": 200,
        "maxHeight": 600,
        "resizable": true,
        "transparent": true,
        "decorations": false,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "visible": false,
        "hiddenTitle": true,
        "titleBarStyle": "Overlay"
      },
      {
        "label": "settings",
        "title": "etools Settings",
        "width": 700,
        "height": 600,
        "minWidth": 600,
        "minHeight": 500,
        "resizable": false,
        "transparent": true,
        "decorations": false,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "visible": false,
        "hiddenTitle": true,
        "titleBarStyle": "Overlay",
        "center": true
      },
      {
        "label": "plugin-popup",
        "title": "Plugin Popup",
        "width": 480,
        "height": 400,
        "minWidth": 320,
        "minHeight": 200,
        "resizable": false,
        "transparent": true,
        "decorations": false,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "visible": false,
        "hiddenTitle": true,
        "titleBarStyle": "Overlay",
        "center": true
      }
    ],
    "macOSPrivateApi": true,
    "security": {
      "csp": null
    },
    "withGlobalTauri": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.png"
    ],
    "macOS": {
      "signingIdentity": null,
      "entitlements": "entitlements.plist",
      "hardenedRuntime": false
    }
  }
}
